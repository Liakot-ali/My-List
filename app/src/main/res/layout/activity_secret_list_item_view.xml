<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecretListItemViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarDemo"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_marginLeft="35sp"
                    android:layout_marginRight="35sp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/toolbarTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Secret List Item"
                        android:textColor="@color/hiLightedTextWhite"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/toolbar_text" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/lay_pad">

                        <TextView
                            android:id="@+id/secretTopic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/lay_pad"
                            android:layout_marginBottom="150sp"
                            android:text="Secret Topic"
                            android:textColor="@color/hiLightedTextBlack"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/headline_text" />

                        <TextView
                            android:id="@+id/secretTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/lay_pad"
                            android:layout_marginBottom="@dimen/lay_pad"
                            android:background="@drawable/text_style1"
                            android:padding="@dimen/text_pad"
                            android:text="Secret name"
                            android:textColor="@color/hiLightedTextBlack"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/normal_text" />

                        <TextView
                            android:id="@+id/secretPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/lay_pad"
                            android:layout_marginRight="@dimen/lay_pad"
                            android:layout_marginBottom="@dimen/lay_pad"
                            android:background="@drawable/text_style100"
                            android:gravity="bottom|left"
                            android:padding="@dimen/text_pad"
                            android:text="Password"
                            android:textColor="@color/hiLightedTextBlack"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/normal_text" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/lay_pad"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/secretDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="wish Date"
                                android:textColor="@color/nonHiLightedTextBlack"
                                android:textIsSelectable="true"
                                android:textSize="@dimen/small_text" />

                            <TextView
                                android:id="@+id/secretTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="wish time"
                                android:textColor="@color/nonHiLightedTextBlack"
                                android:textIsSelectable="true"
                                android:textSize="@dimen/small_text" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/editSecretBtn"
                            style="@android:style/Widget.Button.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/lay_pad"
                            android:background="@drawable/button_style"
                            android:text="Edit Secret"
                            android:textColor="@color/hiLightedTextWhite"
                            android:textSize="@dimen/button_text" />

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>